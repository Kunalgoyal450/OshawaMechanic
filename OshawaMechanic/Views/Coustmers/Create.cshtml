@model OshawaMechanic.Models.Coustmers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create Coustmer";
}

<!DOCTYPE HTML>

<html>

<head>
    <title>Oshawa Mechanic</title>

    <link rel="stylesheet" href="~/css/site.css" type="text/css" />

</head>


<body>


    <ul>
        <li><a class="active" href="~/Employees/Create">New Employee</a></li>
        <li><a class="active" href="~/Employees/ViewEmployees">View All Employee</a></li>
        <li><a class="active" href="~/Coustmers/Create">New Coustmer</a></li>
        <li><a class="active" href="~/Coustmers/ViewCoustmers">View All Coustmer</a></li>
        <li><a class="active" href="~/Assignments/Create">New Assignment</a></li>
        <li><a class="active" href="~/Assignments/ViewAssignments">View All Assignment</a></li>

    </ul>

    <h1>Create</h1>

    <h4>Coustmers</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="coustmerName" class="control-label"></label>
                    <input asp-for="coustmerName" class="form-control" />
                    <span asp-validation-for="coustmerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="coustmerphoneNumber" class="control-label"></label>
                    <input asp-for="coustmerphoneNumber" class="form-control" />
                    <span asp-validation-for="coustmerphoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="coustmerAddress" class="control-label"></label>
                    <input asp-for="coustmerAddress" class="form-control" />
                    <span asp-validation-for="coustmerAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
